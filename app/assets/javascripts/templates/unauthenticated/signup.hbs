<form id="signup-form" class="form-horizontal">
  <fieldset>
    <div id="email_group" class="control-group">
      <label class="control-label" for="login_user_email">Email</label>
      <div class="controls">
        <input id="email" name="email" type="email" />
      </div>
    </div>
    <div id="password_group" class="control-group">
      <label class="control-label" for="login_user_password">Password</label>
      <div class="controls">
        <input id="password" name="password" type="password" />
      </div>
    </div>
    <div id="password_confirmation_group" class="control-group">
      <label class="control-label" for="login_user_password_confirmation">Confirm Password</label>
      <div class="controls">
        <input id="password_confirmation" name="password_confirmation" type="password" />
      </div>
    </div>

    <div class="form-actions">
      <input type="submit" value="Sign up" class="btn btn-primary" />
    </div>
  </fieldset>
</form>
