<form id="addmovie-form" class="form-horizontal">
  <fieldset>
    <div id="title_group" class="control-group">
      <label class="control-label" for="title">Title</label>
      <div class="controls">
        <input id="title" name="title" type="title" />
      </div>
    </div>
    <div id="category_group" class="control-group">
      <label class="control-label" for="category">Category</label>
      <div class="controls">
        <select id="category" name="category">
           <option>Action</option>
           <option>Drama</option>
        </select>
      </div>
    </div>
    <div id="description_group" class="control-group">
      <label class="control-label" for="description">Description</label>
      <div class="controls">
        <input id="description" name="description" type="text" />
      </div>
    </div>

    <div class="form-actions">
      <input type="submit" value="Add" class="btn btn-primary" />
    </div>
  </fieldset>
</form>
